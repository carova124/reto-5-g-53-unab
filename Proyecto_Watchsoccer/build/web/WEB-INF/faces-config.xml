<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <!--reglas de navegacion-->
        <navigation-rule>
            <from-view-id>*</from-view-id>
            <navigation-case>
                <from-outcome>INICIO</from-outcome>
                <to-view-id>index.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                <from-outcome>REGISTRO</from-outcome>
                <to-view-id>usuarios/Create.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                <from-outcome>INICIAR SESION</from-outcome>
                <to-view-id>usuarios/Edit.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                <from-outcome>REGISTRAR PARTIDO</from-outcome>
                <to-view-id>partidos/Create.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                <from-outcome>MODIFICAR PARTIDO</from-outcome>
                <to-view-id>equipos/Create.xhtml</to-view-id>
            </navigation-case>
            <navigation-case>
                <from-outcome>VER PARTIDO</from-outcome>
                <to-view-id>partidos/View.xhtml</to-view-id>
            </navigation-case>
        </navigation-rule>
    </application>
</faces-config>
